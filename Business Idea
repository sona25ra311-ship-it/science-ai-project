  <footer>
    &copy; 2026 Business Idea Generator AI | Made by Sona Sibi
  </footer>

  <script>
    function generateIdea() {
      const domain = document.getElementById('domain').value;
      const budget = document.getElementById('budget').value;
      const skills = document.getElementById('skills').value;
      const audience = document.getElementById('audience').value;

      const ideas = [
        `AI Study Planner\nProblem: Students struggle with time management.\nSolution: AI creates personalized schedules.\nRevenue: Subscription-based.\nTools: AI, Web App.\nWhy it works: High demand in education sector.`,
        `Healthy Meal Subscription\nProblem: Busy people skip meals or eat unhealthy.\nSolution: Personalized healthy meal deliveries.\nRevenue: Subscription.\nTools: App, Food Supply Chain.\nWhy it works: Health-conscious market growing rapidly.`,
        `Virtual Fashion Try-On\nProblem: People hesitate to buy online clothes.\nSolution: AR-based virtual try-on platform.\nRevenue: Commission + Ads.\nTools: AR, Mobile App.\nWhy it works: Reduces return rates, improves shopping experience.`,
        `Skill-Based Micro Jobs\nProblem: Many have skills but no projects.\nSolution: Platform connecting skilled people with small gigs.\nRevenue: Commission per project.\nTools: Website, App.\nWhy it works: Gig economy growing fast.`,
        `Eco-Friendly Packaging Startup\nProblem: High plastic usage.\nSolution: Biodegradable packaging solutions.\nRevenue: B2B sales to small businesses.\nTools: Manufacturing setup.\nWhy it works: Sustainability is trending.`
      ];

      // Randomly pick an idea
      const randomIdea = ideas[Math.floor(Math.random() * ideas.length)];

      document.getElementById('ideaOutput').innerText = `Your Business Idea in ${domain} (Budget: ${budget}, Skills: ${skills}, Audience: ${audience}):\n\n${randomIdea}`;
    }
  </script>
