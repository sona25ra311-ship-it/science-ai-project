    </select>

    <label for="budget">Budget</label>
    <select id="budget">
      <option>Low</option>
      <option>Medium</option>
      <option>High</option>
    </select>

    <label for="skills">Skills (comma separated)</label>
    <input type="text" id="skills" placeholder="e.g., Coding, Marketing, Design">

    <label for="audience">Target Audience</label>
    <select id="audience">
      <option>Students</option>
      <option>Professionals</option>
      <option>Rural Communities</option>
      <option>Global Market</option>
      <option>Everyone</option>
    </select>

    <button onclick="generateIdea()">Generate Business Idea</button>

    <div id="ideaOutput"></div>
